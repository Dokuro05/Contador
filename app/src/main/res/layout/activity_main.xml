<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/contadorPulsaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:onClick="reseteaContador"
        android:text="Resetear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/incrementar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="incremetaContador"
        android:text="Incrementar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contadorPulsaciones"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/decrementar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="decremetaContador"
        android:text="Decrementar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1"/>

</LinearLayout>
